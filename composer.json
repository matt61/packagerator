{
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5.0",
        "propel/propel": "~2.0@dev",
        "silex/silex": "1.3",
        "propel/propel-service-provider": "2.x@dev",
        "twig/twig": "^1.24"
    },
    "require-dev": {
        "phpunit/phpunit": "5.4.*"
    },
    "autoload": {
        "psr-0": {
            "Packagerator\\Model": "src/Packagerator/Model",
            "Packagerator\\Model\\Base": "src/Packagerator/Model/Base",
            "Packagerator\\Model\\Map": "src/Packagerator/Model/Map",
            "Packagerator\\Controller": "src/Packagerator/Controller"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Packagerator\\Model": "test/Packagerator/Model"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "./vendor/bin/propel build --output-dir src",
            "./vendor/bin/propel config:convert --output-dir config",
            "./vendor/bin/propel sql:build --output-dir sql",
            "./vendor/bin/propel sql:insert --sql-dir sql",
            "phpunit -c ./phpunit.xml"
        ]
    }
}
